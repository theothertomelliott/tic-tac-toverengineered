FROM alpine
WORKDIR /root

build:
    ARG VERSION=dev
    BUILD --build-arg SERVICE=currentturn ../../+gobuild

docker:
    ARG VERSION=dev
    ARG REGISTRY
    ARG IMAGE_REF=$REGISTRY/currentturn:$VERSION
    BUILD --build-arg SERVICE=currentturn --build-arg VERSION=$VERSION --build-arg IMAGE_REF=$IMAGE_REF ../../+docker