FROM alpine
WORKDIR /root

build:
    ARG VERSION=dev
    BUILD --build-arg SERVICE=gamerepo ../../+gobuild

docker:
    ARG VERSION=dev
    ARG REGISTRY
    ARG IMAGE_REF=$REGISTRY/gamerepo:$VERSION
    BUILD --build-arg SERVICE=gamerepo --build-arg VERSION=$VERSION --build-arg IMAGE_REF=$IMAGE_REF ../../+docker